{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "*.ts", "**/*.ts", "node_modules/@types/*"]
}
